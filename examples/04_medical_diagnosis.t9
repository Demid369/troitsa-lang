печать("Давление: " + давление2 + " (нормальное)")
печать("Усталость: " + усталость2 + " (незначительная)")

пусть риск2 = консенсус(консенсус(температура2, давление2), усталость2)
печать("Оценка риска: " + риск2)

если риск2 == Нет {
    печать("Рекомендация: НИЗКИЙ РИСК - состояние стабильное")
}
если риск2 == Может {
    печать("Рекомендация: СРЕДНИЙ РИСК - наблюдение")
