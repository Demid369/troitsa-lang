// =============================================================================
// Пример 4: Медицинская диагностика
// Троичная логика для оценки симптомов
// =============================================================================

печать("=== Медицинская диагностика ===")
печать("Троичная система оценки симптомов")
печать("")

// Оценка симптома:
// Да (+1) = симптом выражен
// Может (0) = симптом неопределён
// Нет (-1) = симптом отсутствует

// Пациент 1
печать("=== Пациент 1 ===")
пусть температура1 = Да
пусть давление1 = Может
пусть усталость1 = Да

печать("Температура: " + температура1 + " (повышенная)")
печать("Давление: " + давление1 + " (нормальное)")
печать("Усталость: " + усталость1 + " (есть)")

// Оценка риска через консенсус
пусть риск1 = консенсус(консенсус(температура1, давление1), усталость1)
печать("Оценка риска: " + риск1)

если риск1 == Да {
    печать("Рекомендация: ВЫСОКИЙ РИСК - требуется обследование")
}
если риск1 == Может {
    печать("Рекомендация: СРЕДНИЙ РИСК - наблюдение")
}
если риск1 == Нет {
    печать("Рекомендация: НИЗКИЙ РИСК - состояние стабильное")
}
печать("")

